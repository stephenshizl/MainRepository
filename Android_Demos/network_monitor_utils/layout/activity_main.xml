<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a61555.networkmonitordemo.MainActivity">

    <Button
        android:text="Network Status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="getNetworkStatus"/>

    <Button
        android:text="Mobile Data Status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="getMobileDataStatus"/>

    <Button
        android:text="WIFI Status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="getWifiStatus"/>
</LinearLayout>
