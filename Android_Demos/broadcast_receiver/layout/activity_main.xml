<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a61555.normalreceiverdemo.MainActivity">

    <Button
        android:id="@+id/normal_broadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Normal Broadcast"/>

    <Button
        android:id="@+id/normal_priority_broadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Normal Priority Broadcast"/>

    <Button
        android:id="@+id/custom_broadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Custom Broadcast"/>

</LinearLayout>
